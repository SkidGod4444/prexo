{
  "name": "prexo",
  "private": true,
  "scripts": {
    "build": "turbo run db:generate && turbo build --summarize",
    "build:www": "turbo --filter=www build",
    "build:api": "turbo --filter=api build",
    "build:docs": "turbo --filter=docs build",
    "build:trig": "bunx trigger.dev@latest deploy",
    "dev": "turbo run dev",
    "dev:www": "turbo --filter=www dev",
    "dev:clog": "turbo --filter=changelogs dev",
    "dev:app": "turbo --filter=console dev",
    "dev:api": "turbo --filter=api dev",
    "dev:docs": "turbo --filter=docs dev",
    "dev:trig": "bunx trigger.dev@latest dev",
    "scan:www": "turbo --filter=www scanner",
    "scan:app": "turbo --filter=console scanner",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:push": "cd packages/db && bun db:push",
    "db:generate": "cd packages/db && bun db:generate",
    "db:migrate": "cd packages/db && bun db:migrate",
    "db:studio": "cd packages/db && bun db:studio",
    "db:dev": "cd packages/db && bun db:dev",
    "db:kill": "cd packages/db && bun db:kill",
    "setup": "bash scripts/setup.sh",
    "envc": "bash scripts/envc.sh",
    "cleanup": "bash scripts/cleanup.sh",
    "release:ai-chat-sdk": "turbo --filter=ai-chat-sdk release:pre",
    "release:ai-chat-bot": "turbo --filter=ai-chat-bot release:pre"
  },
  "devDependencies": {
    "@trigger.dev/build": "^3.3.17",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "turbo": "^2.5.6",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@mendable/firecrawl-js": "^4.3.1",
    "@trigger.dev/sdk": "^3.3.17",
    "next": "^15.3.5",
    "puppeteer": "^24.12.1"
  }
}
