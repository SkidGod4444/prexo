{
    "name": "@prexo/db",
    "version": "0.0.0",
    "private": false,
    "exports": {
        ".": "./src/index.ts"
    },
    "scripts": {
        "db:studio": "prisma studio",
        "db:validate": "prisma validate",
        "db:format": "prisma format",
        "db:generate": "prisma generate --accelerate",
        "db:push": "prisma db push",
        "db:migrate": "bun db:validate && prisma migrate dev",
        "db:dev": "prisma dev --name prexo_db",
        "db:kill": "prisma dev stop prexo_db",
        "db:rm": "prisma dev rm prexo_db"
    },
    "dependencies": {
        "@prexo/utils": "workspace:*",
        "@prisma/client": "^6.15.0",
        "@prisma/extension-accelerate": "^2.0.1",
        "drizzle-orm": "^0.44.2",
        "postgres": "^3.4.7",
        "prisma": "^6.15.0"
    }
}